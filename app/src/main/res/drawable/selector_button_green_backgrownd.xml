<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/radius_corners_default" />
            <solid android:color="@color/colorButtonGreenDisabled" />
            <stroke android:width="1dp" android:color="@color/colorButtonGreenDisabled" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/radius_corners_default" />
            <solid android:color="@color/colorButtonGreenDark" />
            <stroke android:width="1dp" android:color="@color/colorButtonGreenDark" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/radius_corners_default" />
            <solid android:color="@color/colorButtonGreen" />
            <stroke android:width="1dp" android:color="@color/colorButtonGreen" />
        </shape>
    </item>
</selector>