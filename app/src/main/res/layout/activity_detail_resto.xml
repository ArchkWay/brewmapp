<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brewmapp.presentation.view.impl.activity.RestoDetailActivity"
    android:orientation="vertical"
    android:id="@+id/activity.resto.detail.root"
    >

    <include layout="@layout/view_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_event_slider"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/common_block_space"
                android:layout_marginLeft="@dimen/common_block_space"
                >

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/activity.restoDetails.slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.daimajia.slider.library.Indicators.PagerIndicator
                        android:id="@+id/activity.restoDetails.indicator"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/colorBlackSemi"
                        android:layout_alignParentBottom="true"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1/1"
                            android:gravity="right"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_big_phone_bigger"
                            android:id="@+id/activity.restoDetails.slider.photosCounter"
                            />
                    </com.daimajia.slider.library.Indicators.PagerIndicator>
                </com.daimajia.slider.library.SliderLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:background="@color/colorBlackSemi"-->
                    <!--android:gravity="right">-->

                    <!--<TextView-->
                        <!--android:id="@+id/activity.restoDetails.photosCounter"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textColor="@color/colorWhite"-->
                        <!--android:textSize="@dimen/text_size_common" />-->
                <!--</LinearLayout>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/common_block_space"
                android:layout_marginLeft="@dimen/common_block_space"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >


                    <TextView
                        android:id="@+id/activity.resto.detail.name"
                        style="@style/AppTheme.Text.Georgia.Italic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/common_block_space"
                        android:text="@string/text_view_value_not_found"
                        android:textColor="@color/colorButtonRed"
                        android:textSize="@dimen/text_size_big_phone_bigger"
                        app:layout_constraintLeft_toRightOf="@+id/view.interest.avatar"

                        />

                    <!--<ru.frosteye.ovsa.presentation.view.widget.Line-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:layout_marginBottom="@dimen/common_block_space"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="@color/colorSplitter"-->
                    <!--app:layout_constraintBottom_toBottomOf="parent"-->
                    <!--app:layout_constraintEnd_toEndOf="parent"-->
                    <!--app:layout_constraintStart_toStartOf="parent" />-->

                    <include layout="@layout/view_like_dislike_fav" />
                </LinearLayout>
                <TextView
                    android:layout_width="@dimen/size_icon_24"
                    android:layout_height="@dimen/size_icon_24"
                    android:background="@drawable/bg_circle"
                    android:layout_gravity="right|center_vertical"
                    android:text="@string/text_view_value_not_found"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/common_block_space"
                android:layout_marginLeft="@dimen/common_block_space"
                >

                <Button
                    android:id="@+id/activity.resto.detail.button.private.message"
                    style="@style/AppTheme.Button.Green.Solid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_block_space"
                    android:layout_weight="1"
                    android:lines="1"
                    android:text="@string/message_send"
                    />

                <Button
                    android:id="@+id/activity.resto.detail.button.subscribe"
                    style="@style/AppTheme.Button.Green.Solid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_block_space"
                    android:layout_weight="1"
                    android:lines="1"
                    android:text="@string/button_text_subscribe"

                    />

            </LinearLayout>

            <ru.frosteye.ovsa.presentation.view.widget.Line
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_weight="1"
            android:background="@color/colorSplitter"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/common_block_space"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/common_block_space"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:id="@+id/activity.resto.detail.rating.view.interior_linear_layout"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_view_interior"
                            style="@style/AppTheme.Paragraph"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/activity.resto.detail.text.view.interior"
                            android:text="@string/text_view_value_not_found"
                            />
                        <!--<RatingBar-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--style="?android:attr/ratingBarStyleSmall"-->
                            <!--android:numStars="5"-->
                            <!--android:rating="2.0"-->
                            <!--android:stepSize="0.5"-->
                            <!--android:theme="@style/RatingBar"-->
                            <!--/>-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:id="@+id/activity.resto.detail.rating.view.service_linear_layout"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_view_service"
                            style="@style/AppTheme.Paragraph"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/activity.resto.detail.text.view.service"
                            android:text="@string/text_view_value_not_found"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:id="@+id/activity.resto.detail.rating.view.beer_linear_layout"
                    android:layout_margin="@dimen/common_block_space"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_view_quality_beer"
                            style="@style/AppTheme.Paragraph"
                            />
                        <TextView
                            android:id="@+id/activity.resto.detail.text.view.quality.beer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_view_value_not_found"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/activity.resto.detail.rating.view.effect_linear_layout"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_view_common_effect"
                            style="@style/AppTheme.Paragraph"
                            />
                        <TextView
                            android:id="@+id/activity.resto.detail.text.view.common.effect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_view_value_not_found"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ru.frosteye.ovsa.presentation.view.widget.Line
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:layout_weight="1"
                android:background="@color/colorSplitter"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="@dimen/common_block_space"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/common_block_space"
                    android:layout_marginRight="@dimen/common_block_space"
                    android:src="@drawable/ic_avg_account" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_avg_account"
                    style="@style/AppTheme.Paragraph"
                    android:layout_marginRight="@dimen/common_block_space_half"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity.resto.detail.text.view.avg.cost"
                    android:text="@string/text_view_value_not_found_1"
                    android:layout_weight="1"
                    style="@style/AppTheme.Paragraph"

                    />
                <!--<ImageView-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:src="@drawable/ic_rub"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--/>-->
            </LinearLayout>

            <ru.frosteye.ovsa.presentation.view.widget.Line
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:layout_weight="1"
                android:background="@color/colorSplitter"
                />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="@dimen/common_block_space"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/activity.resto.detail.constraintLayout"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_place"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/activity.resto.detail.image.view.icon_place"
                    android:layout_margin="@dimen/common_block_space"
                    />

                <TextView
                    android:id="@+id/text_view_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_place"
                    app:layout_constraintStart_toEndOf="@+id/activity.resto.detail.image.view.icon_place"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="@dimen/common_block_space"
                    style="@style/AppTheme.Paragraph"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_chevron_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                     />
            </android.support.constraint.ConstraintLayout>

            <ru.frosteye.ovsa.presentation.view.widget.Line
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:layout_weight="1"
                android:background="@color/colorSplitter"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="@dimen/common_block_space"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/common_block_space"
                    android:layout_marginRight="@dimen/common_block_space"
                    android:src="@drawable/ic_kitchen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_kitchen"
                    style="@style/AppTheme.Paragraph"
                    android:layout_marginRight="@dimen/common_block_space_half"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity.resto.detail.text.view.kitchen"
                    android:text="@string/text_view_value_not_found_2"
                    android:layout_weight="1"
                    style="@style/AppTheme.Paragraph"

                    />

            </LinearLayout>

            <ru.frosteye.ovsa.presentation.view.widget.Line
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:layout_weight="1"
                android:background="@color/colorSplitter"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/common_block_space"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/common_block_space"
                        android:layout_marginRight="@dimen/common_block_space"
                        android:src="@drawable/ic_call" />

                    <TextView
                        android:id="@+id/text_view_call_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_view_value_not_found"
                        style="@style/AppTheme.Paragraph"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/activity.resto.detail.button.call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_block_space"
                    android:layout_weight="1"
                    android:lines="1"
                    android:text="@string/button.call"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_big_phone_bigger"
                    />

            </LinearLayout>

            <ru.frosteye.ovsa.presentation.view.widget.Line
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:layout_weight="1"
                android:background="@color/colorSplitter"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/common_block_space"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/common_block_space"
                        android:layout_marginRight="@dimen/common_block_space"
                        android:src="@drawable/ic_call" />

                    <TextView
                        android:id="@+id/text_view_call_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_view_value_not_found"
                        style="@style/AppTheme.Paragraph"

                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/activity.resto.detail.button.call2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_block_space"
                    android:layout_weight="1"
                    android:lines="1"
                    android:text="@string/button.call"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_big_phone_bigger"
                    />

            </LinearLayout>

            <ru.frosteye.ovsa.presentation.view.widget.Line
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:layout_weight="1"
                android:background="@color/colorSplitter"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="@dimen/common_block_space"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/activity.resto.detail.text.view.site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:paddingLeft="@dimen/common_block_space"
                    android:text="@string/text_view_value_not_found_3"
                    />
            </LinearLayout>

            <ru.frosteye.ovsa.presentation.view.widget.Line
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:layout_weight="1"
                android:background="@color/colorSplitter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_block_space"
                android:layout_marginBottom="@dimen/common_block_space"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.Text.Georgia.BoldItalic"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_block_space_quadro"
                    android:layout_gravity="center_vertical"
                    android:text="@string/text_view_resto_description"
                    android:textColor="@color/red_focused"
                    android:textSize="@dimen/text_size_big_phone"
                    app:layout_constraintLeft_toRightOf="@+id/view.interest.avatar"
                    android:background="@color/colorGrayLightSemi"
                    android:paddingLeft="@dimen/common_block_space"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/activity.resto.detail.text.view.description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_block_space"
                    android:layout_marginRight="@dimen/common_block_space"
                    android:layout_gravity="center_vertical"
                    android:text="@string/text_view_value_not_found_4"
                    android:textSize="@dimen/text_size_big_phone"
                    app:layout_constraintLeft_toRightOf="@+id/view.interest.avatar" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
