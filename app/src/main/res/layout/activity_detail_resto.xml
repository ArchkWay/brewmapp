                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_block_space"
                    android:layout_marginRight="@dimen/common_block_space"
                    android:src="@drawable/ic_avg_account" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_avg_account"
                    style="@style/AppTheme.Paragraph"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity.resto.detail.text.view.avg.cost"
                    android:text="@string/text_view_value_not_found"
                    android:textSize="@dimen/text_size_common_bigger"
                    android:gravity="right"
                    android:layout_weight="1"
                    style="@style/AppTheme.Paragraph"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_rub"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="@dimen/common_block_space"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/activity.resto.detail.constraintLayout"
                >

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_place"
                    app:layout_constraintStart_toStartOf="parent"
