<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brewmapp.presentation.view.impl.activity.PostDetailsActivity"
    android:orientation="vertical"
    >
    <include layout="@layout/view_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_block_space"
                android:paddingRight="@dimen/common_block_space"
                android:paddingTop="@dimen/common_block_space_half"
                android:paddingBottom="@dimen/common_block_space_half"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/size_avatar"
                        android:layout_height="@dimen/size_avatar"
                        android:id="@+id/activity.post.details.avatar"
                        android:scaleType="fitCenter"
                        app:riv_border_width="1dp"
                        android:src="@drawable/ic_default_beer"
                        app:riv_border_color="@color/colorSplitter"
                        android:layout_marginRight="@dimen/common_block_space_double_semi"
                        app:riv_mutate_background="true"
                        android:background="@color/colorGrayLight"
                        app:riv_oval="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/activity.post.details.title"
                        android:textSize="20dp"
                        android:text="Username"
                        style="@style/AppTheme.Text.Georgia.BoldItalic"
                        />

                </LinearLayout>

            </LinearLayout>
            <ru.frosteye.ovsa.presentation.view.widget.Line
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/common_block_space"
                android:layout_marginTop="@dimen/common_block_space"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_block_space"
                android:paddingRight="@dimen/common_block_space"
                android:paddingTop="@dimen/common_block_space_half"
                android:paddingBottom="@dimen/common_block_space_half"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity.post.details.text"
                    android:text="text content"
                    style="@style/AppTheme.Paragraph"
                    />
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_block_space">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_post_button"
            android:adjustViewBounds="true"
            android:id="@+id/activity.post.details.more"
            android:paddingLeft="@dimen/common_block_space_double_semi"
            android:paddingRight="@dimen/common_block_space_double_semi"
            android:paddingTop="@dimen/common_block_space_half"
            android:layout_toLeftOf="@+id/activity.post.details.like"
            android:paddingBottom="@dimen/common_block_space_half"
            android:layout_marginRight="@dimen/common_block_space"
            android:background="@drawable/selector_post_button"
            android:src="@drawable/ic_post_more"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_post_button"
            android:id="@+id/activity.post.details.like"
            android:layout_marginRight="@dimen/common_block_space"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/common_block_space"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_post_button"
                android:adjustViewBounds="true"
                android:paddingLeft="@dimen/common_block_space"
                android:paddingRight="@dimen/common_block_space_half"
                android:paddingTop="@dimen/common_block_space_half"
                android:paddingBottom="@dimen/common_block_space_half"
                android:src="@drawable/ic_like"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorButtonGreen"
                android:textSize="@dimen/text_size_common_bigger"
                android:id="@+id/activity.post.details.like.counter"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
