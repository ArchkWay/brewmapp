<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brewmapp.presentation.view.impl.fragment.ProfileEditFragment">
    <ru.frosteye.ovsa.stub.view.RefreshableSwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment.profile.edit.swipe"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorDecorBgGray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:focusable="true"
                    android:background="@color/colorWhite"
                    android:focusableInTouchMode="true"
                    android:padding="@dimen/common_block_space">

                    <RelativeLayout
                        android:layout_width="@dimen/size_icon_72"
                        android:layout_height="@dimen/size_icon_72"
                        android:layout_marginRight="@dimen/common_block_space"
                        android:layout_marginLeft="@dimen/common_block_space">

                        <LinearLayout
                            android:layout_width="@dimen/size_icon_72"
                            android:layout_height="@dimen/size_icon_72"
                            android:orientation="vertical"
                            android:background="@drawable/selector_ring"
                            android:padding="@dimen/common_block_space"
                            android:id="@+id/activity.register.avatar.placeholder"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/size_icon_36"
                                android:layout_height="@dimen/size_icon_36"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_add"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:layout_marginTop="@dimen/common_block_space_half"
                                android:text="@string/photo"/>
                        </LinearLayout>

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="@dimen/size_icon_72"
                            android:layout_height="@dimen/size_icon_72"
                            android:id="@+id/fragment.profile.edit.avatar"
                            android:background="@drawable/selector_ring"
                            app:riv_oval="true"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="top">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/AppTheme.Text.Georgia.BoldItalic"
                            android:textSize="18sp"
                            android:id="@+id/fragment.profile.edit.name"
                            android:background="@null"
                            android:text="@string/text_view_value_not_found"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:text="@string/text_view_data_not_found"
                            android:textColor="@color/colorBlack"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPersonName|textCapWords"
                            android:id="@+id/fragment.profile.edit.place"
                            android:background="@null"
                            android:layout_weight="1"
                            />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </ru.frosteye.ovsa.stub.view.RefreshableSwipeRefreshLayout>
</FrameLayout>
