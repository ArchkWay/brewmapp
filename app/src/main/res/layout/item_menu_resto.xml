<?xml version="1.0" encoding="utf-8"?>
<com.brewmapp.presentation.view.impl.widget.MenuRestoView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="0.25dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:id="@+id/view.menu.avatar"
            android:scaleType="fitCenter"
            app:riv_oval="true"
            android:layout_margin="2dp"
            android:padding="4dp"
            android:background="@drawable/bg_ring_red"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/common_block_space"
            android:layout_marginRight="@dimen/common_block_space"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_value_not_found"
                    android:textSize="@dimen/text_size_common_biggest"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/view.menu.title"
                    style="@style/AppTheme.Text.Georgia.BoldItalic"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_rating"
                    android:text="@string/text_view_value_not_found"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view.menu.container_price"
                android:orientation="vertical">

            </LinearLayout>
    </LinearLayout>
    </LinearLayout>


</com.brewmapp.presentation.view.impl.widget.MenuRestoView>