<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:elevation="2dp"
    android:background="@drawable/bg_shadow" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:id="@+id/img_resto_logo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_default_resto"/>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/img_resto_logo"
            android:layout_toEndOf="@+id/img_resto_logo"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:textStyle="italic"
            android:text="dfgdfgfdgfdg"
            android:textSize="@dimen/text_facebook_login"
            android:textColor="@color/vk_black"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="3dp"
            android:textColor="@color/vk_black"
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>

        </RelativeLayout>

</LinearLayout>