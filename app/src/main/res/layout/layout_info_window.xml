<?xml version="1.0" encoding="utf-8"?>
<com.brewmapp.presentation.view.impl.widget.InfoWindowMap xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="200dp"
    android:elevation="2dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_resto_logo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/ic_default_resto"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:id="@+id/lyt_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/img_resto_logo"
            android:layout_toRightOf="@+id/img_resto_logo"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_view_value_not_found"
                android:textColor="@color/vk_black"
                android:textSize="@dimen/text_facebook_login"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:id="@+id/layout.city"
                >

                <ImageView
                    android:id="@+id/img_location"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location_icon"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_value_not_found"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:id="@+id/layout.metro"
                android:visibility="gone"
                >

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_metro"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/metro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_value_not_found"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/lyt_info"
            android:layout_toRightOf="@+id/lyt_info"
            android:layout_width="@dimen/size_icon_18"
            android:layout_height="@dimen/size_icon_18"
            android:background="@drawable/bg_round_green"
            android:text="@string/text_view_value_not_found"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>




</com.brewmapp.presentation.view.impl.widget.InfoWindowMap>