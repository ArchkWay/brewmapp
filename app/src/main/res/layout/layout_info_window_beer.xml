<?xml version="1.0" encoding="utf-8"?>
<com.brewmapp.presentation.view.impl.widget.InfoWindowMapBeer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    >
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="@dimen/size_menu_icon"
        android:layout_height="@dimen/size_menu_icon"
        android:id="@+id/infowindowmapbeer.avatar"
        android:scaleType="fitCenter"
        app:riv_mutate_background="true"
        android:background="@android:color/transparent"
        app:riv_oval="false"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_beer"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infowindowmapbeer.beer_id"
                android:lines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:text="@string/text_view_value_not_found"
                android:textColor="@color/vk_black"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infowindowmapbeer.price"
                android:lines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:text="@string/text_view_value_not_found"
                android:visibility="gone"
                />

        </LinearLayout>
</com.brewmapp.presentation.view.impl.widget.InfoWindowMapBeer>