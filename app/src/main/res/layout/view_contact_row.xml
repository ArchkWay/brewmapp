<?xml version="1.0" encoding="utf-8"?>
<com.brewmapp.presentation.view.impl.widget.ContactView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/ovsa_bg_selector_simple"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/common_block_space"
    android:paddingBottom="@dimen/common_block_space"
    android:gravity="center_vertical"
    android:paddingRight="@dimen/common_block_space"
    android:paddingLeft="@dimen/common_block_space_double_semi">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/size_avatar_lesser"
            android:layout_height="@dimen/size_avatar_lesser"
            android:id="@+id/view.contact.avatar"
            android:scaleType="fitCenter"
            app:riv_border_width="1dp"
            android:src="@drawable/ic_user_man"
            app:riv_border_color="@color/colorSplitter"
            android:layout_marginRight="@dimen/common_block_space_double_semi"
            app:riv_mutate_background="true"
            android:background="@color/colorGrayLight"
            app:riv_oval="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:background="@drawable/bg_badget"
            android:textColor="@color/white"
            android:id="@+id/view.contact.badget"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:visibility="gone"
            />

    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/view.contact.contaiter0"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:id="@+id/view.contact.contaiter1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view.contact.username"
                    android:textSize="@dimen/text_size_common"
                    android:ellipsize="end"
                    android:lines="1"
                    android:scrollHorizontally="true"
                    style="@style/AppTheme.Text.Georgia.Bold2"
                    android:text="@string/text_view_value_not_found"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:lines="1"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:id="@+id/view.contact.subtitle"
                    android:textColor="@color/colorProfileCounter"
                    android:text="@string/text_view_value_not_found"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view.contact.last_message"
                android:text="@string/text_view_value_not_found"
                />
        </LinearLayout>


        <!--<TextView-->
            <!--android:layout_width="15dp"-->
            <!--android:layout_height="15dp"-->
            <!--android:background="@drawable/bg_round_gray"-->
            <!--android:id="@+id/view.contact.online"-->
            <!--android:layout_marginLeft="10dp"/>-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_button_friend_accept"
            android:textAllCaps="false"
            android:id="@+id/view.contact.button_friend_accept"
            android:textColor="#4bbc2a"
            android:background="@color/colorWhiteTransparent"
            android:visibility="gone"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_button_friend_delete"
            android:textAllCaps="false"
            android:id="@+id/view.contact.button_friend_delete"
            android:background="@color/colorWhiteTransparent"
            android:textColor="#ffacab"
            android:visibility="gone"
            />

    </LinearLayout>

</com.brewmapp.presentation.view.impl.widget.ContactView>