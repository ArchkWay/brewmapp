<?xml version="1.0" encoding="utf-8"?>
<com.brewmapp.presentation.view.impl.widget.EventView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ovsa_bg_selector_simple_white" >
    <ru.frosteye.ovsa.presentation.view.widget.Line
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlockSplitterBorder"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_block_space">

        <ImageView
            android:layout_width="@dimen/width_event_preview"
            android:layout_height="@dimen/width_event_preview"
            android:id="@+id/view.event.image"
            android:layout_marginRight="@dimen/common_block_space"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view.event.name"
                android:textSize="@dimen/text_size_common_bigger"
                android:layout_marginBottom="@dimen/common_block_space_half"
                style="@style/AppTheme.Text.Georgia.BoldItalic"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="@dimen/size_event_icon_mini"
                    android:layout_height="@dimen/size_event_icon_mini"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginRight="@dimen/common_block_space"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_block_space_half"
                    android:id="@+id/view.event.date"
                    android:textColor="@color/colorProfileCounter"
                    android:textSize="@dimen/text_size_common" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/size_event_icon_mini"
                    android:layout_height="@dimen/size_event_icon_mini"
                    android:layout_marginRight="@dimen/common_block_space"
                    android:src="@drawable/ic_loc"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_block_space_half"
                    android:id="@+id/view.event.location"
                    android:textColor="@color/colorProfileCounter"
                    android:textSize="@dimen/text_size_common" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view.event.text"
        android:layout_marginTop="@dimen/common_block_space"
        style="@style/AppTheme.Paragraph.Italic"
        android:layout_marginLeft="@dimen/common_block_space"
        android:layout_marginRight="@dimen/common_block_space"
        android:layout_marginBottom="@dimen/common_block_space_double" />

    <ru.frosteye.ovsa.presentation.view.widget.Line
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlockSplitterBorder"/>

    <ru.frosteye.ovsa.presentation.view.widget.Line
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_block_space"
        android:background="@color/colorBlockSplitter"/>
</com.brewmapp.presentation.view.impl.widget.EventView>