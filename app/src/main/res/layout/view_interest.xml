<?xml version="1.0" encoding="utf-8"?>
<com.brewmapp.presentation.view.impl.widget.InterestView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common_block_space"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/size_avatar_lesser"
                android:layout_height="@dimen/size_avatar_lesser"
                android:id="@+id/view.interest.avatar"
                android:scaleType="fitCenter"
                app:riv_mutate_background="true"
                android:background="@android:color/transparent"
                app:riv_oval="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/common_block_space"
                android:layout_marginRight="@dimen/common_block_space"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_value_not_found"
                    android:textSize="@dimen/text_size_common_biggest"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/view.interest.title"
                    app:layout_constraintLeft_toRightOf="@+id/view.interest.avatar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    style="@style/AppTheme.Text.Georgia.BoldItalic"
                    android:lines="1"
                    android:ellipsize="end"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view.interest.craft"
                    android:text="@string/text_craft_beer"
                    android:visibility="gone"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="top"
                >
                <TextView
                    android:layout_width="@dimen/common_block_space_triple"
                    android:layout_height="@dimen/common_block_space_triple"
                    android:text="@string/text_view_value_not_found"
                    android:background="@drawable/bg_circle"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="@dimen/common_block_space_double"
                    android:layout_height="@dimen/common_block_space_double"
                    android:src="@drawable/ic_cell_arrow"
                    android:layout_marginTop="@dimen/common_block_space"
                    android:layout_gravity="right"
                />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_view_value_not_found"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/view.interest.avatar"
            app:layout_constraintTop_toBottomOf="@+id/view.interest.title"
            android:id="@+id/view.interest.shot.text"
            android:maxLines="3"
            android:paddingLeft="@dimen/common_block_space_half"
            android:ellipsize="end"
            style="@style/AppTheme.Text.Georgia.Italic"
            />

    </LinearLayout>

        <ru.frosteye.ovsa.presentation.view.widget.Line
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/colorBlockSplitterBorder"/>

</com.brewmapp.presentation.view.impl.widget.InterestView>
