<?xml version="1.0" encoding="utf-8"?>
<com.brewmapp.presentation.view.impl.widget.ItemShowAllRestoView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >

    <RelativeLayout
        android:layout_width="@dimen/size_avatar_lesser"
        android:layout_height="@dimen/size_avatar_lesser">
        <ImageView
            android:layout_width="@dimen/size_icon_24"
            android:layout_height="@dimen/size_icon_24"
            android:src="@drawable/ic_i_work"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_item_show_all_resto"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/common_block_space"
        android:layout_weight="1"
        />
    <ImageView
        android:layout_width="@dimen/size_icon_24"
        android:layout_height="@dimen/size_icon_24"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/ic_arrow_right"
        />

</com.brewmapp.presentation.view.impl.widget.ItemShowAllRestoView>