<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/linearLayout"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_post_button"
                android:adjustViewBounds="true"
                android:paddingLeft="@dimen/common_block_space"
                android:paddingRight="@dimen/common_block_space_half"
                android:paddingTop="@dimen/common_block_space_half"
                android:paddingBottom="@dimen/common_block_space_half"
                android:id="@+id/view.like.icon"
                android:src="@drawable/ic_like"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorButtonGreen"
                android:textSize="@dimen/text_size_common_bigger"
                android:id="@+id/view.like.counter"
                android:text="@string/text_view_value_not_found"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_post_button"
                android:adjustViewBounds="true"
                android:paddingLeft="@dimen/common_block_space"
                android:paddingRight="@dimen/common_block_space_half"
                android:paddingTop="@dimen/common_block_space_half"
                android:paddingBottom="@dimen/common_block_space_half"
                android:id="@+id/view.dislike.icon"
                android:src="@drawable/ic_dislike"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorButtonRed"
                android:textSize="@dimen/text_size_common_bigger"
                android:id="@+id/view.dislike.counter"
                android:text="@string/text_view_value_not_found"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_post_button"
                android:adjustViewBounds="true"
                android:paddingLeft="@dimen/common_block_space"
                android:paddingRight="@dimen/common_block_space_half"
                android:paddingTop="@dimen/common_block_space_half"
                android:paddingBottom="@dimen/common_block_space_half"
                android:id="@+id/view.dislove.icon"
                android:src="@drawable/ic_dislove"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorButtonRed"
                android:textSize="@dimen/text_size_common_bigger"
                android:id="@+id/view.dislove.counter"
                android:text="@string/text_view_value_not_found"/>

        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>