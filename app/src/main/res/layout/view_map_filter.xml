<?xml version="1.0" encoding="utf-8"?>
<com.brewmapp.presentation.view.impl.widget.FilterRowField xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/lyt_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/filter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_resto_name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filter_name"
                android:layout_margin="6dp"
                android:background="@drawable/bg_with_corner"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/icon_filter"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_search" />

                <TextView
                    android:id="@+id/selected_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:textColor="@color/vk_black"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="3dp"
                    android:paddingEnd="3dp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />

    </RelativeLayout>

</com.brewmapp.presentation.view.impl.widget.FilterRowField>