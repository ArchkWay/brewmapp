<?xml version="1.0" encoding="utf-8"?>
<com.brewmapp.presentation.view.impl.widget.MenuFieldRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/common_block_space_double_semi"
    android:paddingRight="@dimen/common_block_space_double_semi"
    android:paddingTop="4dp"
    android:paddingBottom="4dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_width="@dimen/size_menu_icon"
                android:layout_height="@dimen/size_menu_icon"
                android:layout_marginRight="@dimen/common_block_space_double_semi"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/view.menuField.icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:background="@drawable/bg_badget"
                    android:textColor="@color/white"
                    android:layout_margin="3dp"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    android:id="@+id/view.menuField.badget"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    />

            </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:id="@+id/view.menuField.title"/>
    </LinearLayout>

</com.brewmapp.presentation.view.impl.widget.MenuFieldRow>