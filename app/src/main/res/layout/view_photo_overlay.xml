<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_block_space_double"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/common_block_space"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textColorHighlight="@color/color_text_button_white"
                android:textSize="@dimen/text_size_common_bigger"
                android:id="@+id/view.photoOverlay.name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_common_small"
                android:textColor="@color/colorGrayLight"
                android:id="@+id/view.photoOverlay.date"/>
        </LinearLayout>

        <com.brewmapp.presentation.view.impl.widget.LikeView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view.photoOverlay.likes"/>
    </LinearLayout>
</RelativeLayout>