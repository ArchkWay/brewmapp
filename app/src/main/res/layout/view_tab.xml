<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.Text.Georgia.Bold2"
        android:textSize="@dimen/text_size_common"
        android:id="@android:id/text1"
        android:paddingLeft="@dimen/common_block_space_double"
        android:paddingRight="@dimen/common_block_space_double_semi"
        android:textColor="@color/colorAccent"/>
    <View
        android:layout_width="@dimen/common_block_space_half"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_block_space_half"
        android:layout_marginBottom="@dimen/common_block_space_half"
        android:background="@color/colorAccent"/>
</LinearLayout>