<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_block_space_double"
        android:layout_marginRight="@dimen/common_block_space_double"
        app:tabTextAppearance="?attr/textAppearanceListItemSmall"
        app:tabBackground="@drawable/selector_tab"
        app:tabSelectedTextColor="@color/colorWhite"
        app:tabTextColor="@color/colorGrayLight"
        app:tabIndicatorHeight="0dp"
        app:tabIndicatorColor="@color/colorWhiteTransparent"
        android:layout_marginBottom="@dimen/common_block_space"
        android:background="@drawable/bg_tab_view"
        android:id="@+id/view.tabs.tabs"/>
</merge>