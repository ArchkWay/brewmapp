<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

    <com.github.chrisbanes.photoview.PhotoView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:id="@+id/view_custom_slider_image"
        android:layout_weight="1"
        >

    </com.github.chrisbanes.photoview.PhotoView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view_custom_slider_avtor"
                android:textColor="@color/colorWhite"
                android:textSize="17dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view_custom_slider_date"
                android:textColor="@color/colorWhiteSemi"
                />

        </LinearLayout>
        <com.brewmapp.presentation.view.impl.widget.LikeView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/view.photoOverlay.likes"
            android:layout_gravity="right"/>

    </LinearLayout>

</LinearLayout>
