<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="actionMenuTextColor">@color/color_text_button_white</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>

        <item name="colorControlNormal">@color/colorButtonRed</item>

        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>

    </style>

    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppThemeMoveTaskToBack" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppThemeWithActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="actionMenuTextColor">@color/color_text_button_white</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="Toolbar">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="actionMenuTextColor">@drawable/text_view_enable_red_disable_gray</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">@dimen/common_block_space_double</item>
        <item name="android:paddingRight">@dimen/common_block_space_double</item>
        <item name="android:minHeight">@dimen/height_min_button</item>
    </style>

    <style name="AppTheme.Button.Red">
        <item name="android:background">@drawable/selector_button_red</item>
        <item name="android:textColor">@color/color_text_button_white</item>
    </style>

    <style name="AppTheme.Button.Green">
        <item name="android:background">@drawable/selector_button_green_frame</item>
        <item name="android:textColor">@color/color_text_button_green</item>
    </style>

    <style name="AppTheme.Button.Green.Solid">
        <item name="android:background">@drawable/selector_button_green_solid</item>
        <item name="android:textColor">@color/color_text_button_white</item>
        <item name="android:minHeight">35dp</item>
        <!--<item name="android:paddingTop">@dimen/common_block_space</item>-->
        <!--<item name="android:paddingBottom">@dimen/common_block_space</item>-->
        <!--<item name="android:paddingLeft">@dimen/common_block_space_double_semi</item>-->
        <!--<item name="android:paddingRight">@dimen/common_block_space_double_semi</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_common</item>
    </style>

    <style name="AppTheme.Button.Green.Solid.Square">
        <item name="android:background">@drawable/selector_button_green_solid_square</item>
    </style>

    <style name="AppTheme.Text"></style>

    <style name="AppTheme.Paragraph">
        <item name="android:textSize">@dimen/text_size_common</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:minHeight">35dp</item>
    </style>

    <style name="AppTheme.Paragraph.Italic">
        <item name="fontPath">fonts/italic.ttf</item>
    </style>

    <style name="AppTheme.Text.Georgia">
        <item name="fontPath">fonts/italic.ttf</item>
    </style>

    <style name="AppTheme.Text.Georgia.Bold">
        <item name="fontPath">fonts/bold.ttf</item>
    </style>

    <style name="AppTheme.Text.Georgia.Bold2">
        <item name="fontPath">fonts/bold.ttf</item>
        <!--<item name="fontPath">fonts/bold_italic.ttf</item>-->
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:textStyle">bold|italic</item>-->
    </style>

    <style name="AppTheme.Text.Georgia.Italic">
        <item name="fontPath">fonts/italic.ttf</item>
    </style>

    <style name="AppTheme.Text.Georgia.Italic.TitleResto">
        <item name="fontPath">fonts/italic.ttf</item>
        <item name="android:textColor">@color/colorButtonRed</item>
        <item name="android:textSize">@dimen/text_size_big_phone_bigger</item>
    </style>

    <style name="AppTheme.Text.H3">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Text.H4">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Text.H5">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Input">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">@dimen/common_block_space_double_semi</item>
        <item name="android:textColor">@color/color_text_input</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:minHeight">@dimen/height_min_button</item>
    </style>

    <style name="AppTheme.Input.Lesser">
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">@dimen/height_min_input_lesser</item>
    </style>

    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.Text.Georgia.Italic.TitleResto.ListEvent">
        <item name="fontPath">fonts/italic.ttf</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_size_common_bigger</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


</resources>
